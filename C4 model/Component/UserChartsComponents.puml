@startuml
!include https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Component.puml
' uncomment the following line and comment the first to use locally
' !include C4_Component.puml

LAYOUT_WITH_LEGEND()

title System Component diagram for Ecommerce System

Component(web_app, "Web application for Customer","Component: Vuejs", "Run application code in web browser with UserCharts screen.")
ComponentDb(db, "Sneaker Shop Database","Component MySql", "Stores UserCharts")

Boundary(System, "Ecommerce System") {
    Component(Controller, "UserChartsController", "Component ASP.NET Controller", "Receive and process requests ")
    Component(Service, "Service","Component ASP.NET Service", "Bussiness logic to displaying UserCharts ")
    Component(model, "UserCharts Model", "Component ASP.NET Model", "Provide data  of UserCharts model ")

    Rel(Controller, Service, "Uses")
    Rel(Service, model, "Uses")
    Rel(model, db, "Read")
    Rel(web_app,Controller, "Make API call to [JSON/HTTPS]")
}
@enduml