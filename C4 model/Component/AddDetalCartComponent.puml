@startuml
!include https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Component.puml
' uncomment the following line and comment the first to use locally
' !include C4_Component.puml

LAYOUT_LEFT_RIGHT()

title System Component diagram for Ecommerce System

Component(web_app, "Web application for Customer","Component: Vuejs", "Run application code in web browser with DetailCart  screen.")
ComponentDb(db, "Sneaker Shop Database","Component MySql", "Stores DetailCart ")

Boundary(System, "Ecommerce System") {
    Component(Controller, "DetailCart Controller", "Component ASP.NET Controller", "Receive and process requests ")
    Component(Service, "Service","Component ASP.NET Service", "Bussiness logic to displaying DetailCart  ")
    Component(model, "Cart Model", "Component ASP.NET Model", "Provide data  of Cart  model ")

    Rel(Controller, Service, "Uses")
    Rel(Service, model, "Call model cart")
    Rel(model, db, "Write")
    Rel(web_app,Controller, "Make API call to [JSON/HTTPS]")
}
@enduml